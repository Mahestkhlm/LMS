@model IEnumerable<LMSLexicon20.Models.Course>

@{
    ViewData["Title"] = "Courses";
}

<div id="mainbackgroundcolor" class="rounded-lg">
    <h1 class="text-light rounded-top p-3" id="searchindex">@ViewData["Title"]</h1>
    <form class="text-light" asp-action="Filter"
          data-ajax="true"
          data-ajax-method="GET"
          data-ajax-mode="replace"
          data-ajax-update="usersupdate">
        <div class="input-group m-auto" id="searchindex">
            <input type="text" name="courseName" class="form-control" placeholder="Search on Course Name." />
            <div class="input-group-append">
                <button type="submit" class="btn btn-primary "><i class="fa fa-search">&emsp;Search</i></button>
            </div>
        </div>
    </form>

    <h1>Index</h1>

    <p>
        <div class="container pb-1">
            <a asp-action="Create">Create New</a>
        </div>
        <div class="text-success blink_me">
            @TempData["SuccessText"]
        </div>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>