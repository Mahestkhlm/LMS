@model AddTeacherToCourseViewModel
@inject ITeacherChoiceDropdown dropdown

@{
    ViewData["Title"] = "LÄGGA TILL LÄRAREN";
}

    <h2 class="bg-dark shadow-lg border rounded-lg font-weight-bold text-light p-4"> Lägg till en lärare</h2>

        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="AddTeacherToCourse">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="from-group mb-3">
                        <select asp-for="TeacherId" asp-items="@await dropdown.GetTeacherList()" class="form-control">
                            <option selected="selected" value="">Välj en lärare</option>
                        </select>
                    </div>
                    <div class="form-group btn-group-sm">
                        <button type="submit" class="btn btn-sm btn-outline-primary a-btn-slide-text">
                            <i class="fas fa-check-circle" aria-hidden="true"></i>&nbsp;Spara&nbsp;
                            <i class="fas fa-university" aria-hidden="true"></i>
                        </button>
                        <a href="javascript:history.go(-1)" class="btn btn-sm btn-outline-secondary a-btn-slide-text">
                            <i class="fas fa-ban" aria-hidden="true"></i>
                            <span>Avbryt</span>
                        </a>
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-controller="Courses" asp-action="Edit" asp-route-id="@Model.Id">Tillbaka till redigering</a>
        </div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
