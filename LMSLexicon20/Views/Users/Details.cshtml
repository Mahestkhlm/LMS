@model UserDetailsViewModel

@{
    ViewData["Title"] = "Användaröversikt";
}

<h2 class="bg-dark shadow-lg border rounded-lg font-weight-bold text-light p-4">ANVÄNDARÖVERSIKT</h2>

<h4>@Html.DisplayFor(model => model.FullName)</h4>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Role)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Role)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RegDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RegDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Course != null)
            {
                <a asp-controller="Courses" asp-action="Details" asp-route-id="@Model.Course.Id">@Model.Course.Name</a>
            }
            else
            {
                <div>Ingen kurs tilldelad</div>
            }
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Teacher"))
    {
        <a asp-action="Edit" asp-route-id="@Model.Id">Redigera</a><span> | </span>
        <a asp-action="DeleteUser" asp-route-id="@Model.Id">Ta bort</a><br />
    }
    <a asp-action="List">Tillbaka till listan</a>
</div>
