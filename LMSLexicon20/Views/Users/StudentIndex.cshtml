@model LMSLexicon20.Models.ViewModels.StudentIndexViewModel

@{
    ViewData["Title"] = "Student StartPage";
}

<body style="background-color:ThreeDHighlight powderblue">


    <div class="container">
        <div class="row pt-4">
            <div class="col-md">
                <div id="StudentHeader" class="media rounded p-4">
                    <img class="mr-3 rounded" src="~/Images/loginavatar.png" width="100" />
                    <div class="media-body">
                        <h3>VÄLKOMMEN @Model.FullName!</h3>
                        <p>Det här är din profil där dina senaste aktiviteter och inlämningar visas.</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row my-3"></div>
        <div class="row px-5">
            <div class="col-md-6">
                <div class="card border-dark rounded">
                    <div class="card-header bg-secondary text-white">Senaste inlämningar</div>
                    <div class="card-body">body</div>
                </div>
            </div>
            <div class="col-md-6"></div>
        </div>
    </div>

    <div class="row my-3"></div>

    <div class="container list-inline-item bg-border-dark text-black">
        <h1>AKTUELL VECKA</h1>
        <div class="card">
            <h6 class="card-header bg-secondary text-black list-group-item list-group-item-action active">AKTIVITET</h6>
            <div class="card-body card-border-dark rounded">
                <button class=" badge badge-pill btn-lg btn-success" type="button" data-toggle="collapse" data-target="#Activitycollapse" aria-expanded="false" aria-controls="Activitycollapse">
                    INLÄMNAD
                </button>
                <div class="collapse" id="Activitycollapse">
                    <div class="card card-body">
                        WE MUST INCLUDE THE RESPECTIVE ACTIVITY NAME /LINKS
                    </div>
                </div>
            </div>
        </div>
        <div class="row my-3"></div>
        <div class="card">
            <div class="card-body  card-border-dark rounded">
                <button class="badge badge-pill btn-lg btn-warning" type="button" data-toggle="collapse" data-target="#EjActivitycollapse" aria-expanded="false" aria-controls="EjActivitycollapse">
                    EJ INLÄMNAD
                </button>
                <div class="collapse" id="EjActivitycollapse">
                    <div class="card card-body">
                        WE MUST INCLUDE THE ICOMPLETE AKTIVITY NAME/LINKS
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="row my-3"></div>
    <div class="card">
        <h5 class="card-header bg-secondary text-black">UPLOADS</h5>
        <div class="card-body  card-border-dark rounded">
            <button class="badge badge-pill btn-lg btn-primary" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                Documents
            </button>
            <div class="collapse" id="collapseExample">
                <div class="card card-body">
                    Anim pariatur cliche reprehenderit, enim eiusmod high life accusamus terry richardson ad squid. Nihil anim keffiyeh helvetica, craft beer labore wes anderson cred nesciunt sapiente ea proident.
                </div>
            </div>
        </div>
    </div>



   </body>
