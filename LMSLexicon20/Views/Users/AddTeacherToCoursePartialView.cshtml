@model AddTeacherToCourseViewModel
@inject ITeacherChoiceDropdown dropdown

@{
    ViewData["Title"] = "Lägga till läraren";
}
<div class="row">
    <div class="col">
        <form asp-action="AddTeacherToCourse"
              data-ajax="true"
              data-ajax-method="POST"
              data-ajax-mode="replace"
              data-ajax-success="DisplayAddTeacherSuccess"
              data-ajax-update="#createform">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="from-group mb-3">
                <select asp-for="TeacherId" asp-items="@await dropdown.GetTeacherList()" class="form-control">
                    <option selected="selected" value="">Välj en lärare</option>
                </select>
            </div>
            <div class="form-group btn-group-sm">
                <button type="submit" class="btn btn-sm btn-outline-primary a-btn-slide-text">
                    <i class="fas fa-plus-circle" aria-hidden="true"></i>&nbsp;Lägg till Läraren&nbsp;
                    <i class="fas fa-user-plus" aria-hidden="true"></i>
                </button>
                <a href="javascript:history.go(0)" class="btn btn-sm btn-outline-secondary a-btn-slide-text">
                    <i class="fas fa-ban" aria-hidden="true"></i>
                    <span>Avbryt</span>
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
