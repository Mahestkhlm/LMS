@model LMSLexicon20.Models.ViewModels.TeacherIndexViewModel
@{
    ViewData["Title"] = "Start";
}



<div class="container">
    <div class="row pt-4">
        <div class="col-md">
            <div id="teacherHeader" class="media rounded p-4">
                <img class="mr-3 rounded" src="~/Images/loginavatar.png" width="100" />
                <div class="media-body">
                    <h3>Välkommen @Model.FullName!</h3>
                    <p>Det här är din profil där dina senaste aktiviteter och inlämningar visas.</p>
                </div>
            </div>
        </div>
    </div>
    <div class="row my-3"></div>
    <div class="row px-5">
        <div class="col-md-6">
            <div class="card border-primary">
                <div class="card-header bg-primary text-white">Senaste inlämningar</div>
                <div class="card-body">body</div>
            </div>
        </div>
        <div class="col-md-6"></div>
    </div>
    <div class="row my-3"></div>
    <div class="row px-5">
        <div class="col-md-6">
            <div class="card border-primary">
                <div class="card-header bg-primary text-white">Schema vecka @Model.GetWeekNumber()</div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        @foreach (var day in Model.WeekDays)
                        {
                            <li class="list-group-item">
                                <b>@day</b>
                                <ul class="list-group">
                                @*@if(modellens kurs har assignments som har slutdatum=DayOfWeek)*@
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        Inlämning 
                                        <span class="badge badge-primary badge-pill">14</span>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        Inlämning 
                                        <span class="badge badge-primary badge-pill">14</span>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-6"></div>
    </div>
</div>


