@model IEnumerable<LMSLexicon20.Models.ViewModels.ActivityListViewModel>

@{
    ViewData["Title"] = "Index";
}

    <h2 class="bg-dark shadow-lg rounded-lg font-weight-bold text-light p-4">AKTIVITETSLISTA</h2>
<p>
    <a class="btn btn-info" asp-action="Create">Skapa ny aktivitet</a> 
    </p>
<div class="text-success blink_me">
    @TempData["SuccessText"]
</div>
<div class="text-danger blink_me">
    @TempData["FailText"]
</div>
<table class="table table-striped">
    <thead class="table-dark">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.HasDeadline)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Module.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ActivityType.Name)
        </th>
        <th></th>
    </tr>
</thead>
    <tbody>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.HasDeadline)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Module.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActivityType.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Redigera</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detaljer</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Radera</a>

                <a asp-controller="Courses" asp-action="Index" asp-route-id="@item.Name" class=" btn btn-primary mr-3">Tillbaka till kurs</a>


            </td>


        </tr>


                }
            </tbody>
        </table>
