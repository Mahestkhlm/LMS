@model LMSLexicon20.Models.ViewModels.CreateActivityViewModel
@inject IActivityTypeChoiceDropdown dropdown

@{
    ViewData["Title"] = "Lägg till en Aktivitet";
}


<h2 class="bg-dark shadow-lg shadow-lg border rounded-lg font-weight-bold text-light p-4">LÄGG TILL EN AKTIVITET</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" rows="5" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="HasDeadline" /> @Html.DisplayNameFor(model => model.HasDeadline)
                </label>
            </div>
            <div class="form-group">
                <select asp-for="ActivityTypeId" asp-items="@dropdown.GetActivityTypeList()" class="form-control">
                    <option selected="selected" value="">Välj en aktivitetstyp</option>
                </select>
            </div>
            <div class="form-group btn-group-sm">
                <button type="submit" class="btn btn-sm btn-outline-primary a-btn-slide-text">
                    <i class="fas fa-plus-circle" aria-hidden="true"></i>&nbsp;Lägg till&nbsp;
                    <i class="fas fa-university" aria-hidden="true"></i>
                </button>
                <a asp-action="Index" class="btn btn-sm btn-outline-secondary a-btn-slide-text">
                    <i class="fas fa-ban" aria-hidden="true"></i>
                    <span>Avbryt</span>
                </a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
